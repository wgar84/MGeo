	author = {Álvarez, Alicia and Perez, S. Ivan and Verzi, Diego H.},
	month = apr,
	year = {2011},
	keywords = {comparative methods, evolutionary history, Geometric morphometrics, morphological diversification},
	pages = {828--837},
	file = {Full Text PDF:/home/guilherme/Dropbox/Zotero/9y8qrhli.default/zotero/storage/IB4DHC99/Álvarez et al. - 2011 - Ecological and phylogenetic influence on mandible .pdf:application/pdf;Snapshot:/home/guilherme/Dropbox/Zotero/9y8qrhli.default/zotero/storage/6MZV8CKM/full.html:text/html}
