	month = oct,
	year = {2011},
	keywords = {Adaptation, convergent evolution, Geometric morphometrics, mollusc},
	pages = {571--584},
	file = {Full Text PDF:/home/guilherme/Dropbox/Zotero/9y8qrhli.default/zotero/storage/URTJEQDZ/Serb et al. - 2011 - Morphological convergence of shell shape in distan.pdf:application/pdf;Snapshot:/home/guilherme/Dropbox/Zotero/9y8qrhli.default/zotero/storage/6HXSZT8N/full.html:text/html}
